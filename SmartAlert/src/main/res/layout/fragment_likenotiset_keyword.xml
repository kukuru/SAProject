<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <com.namleesin.smartalert.commonView.ActionBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:actionbarTitle="똑똑한 알림"
        custom:actionbarType="activity">
    </com.namleesin.smartalert.commonView.ActionBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/noti_like_set_state"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심 알림 설정"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/bg7"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12">

            <com.namleesin.smartalert.commonView.PullDownInputView
                android:id="@+id/pulldownView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.namleesin.smartalert.commonView.PullDownInputView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/bg7"
                android:background="@color/bg4"
                android:text="키우드를 설정하여 관심 있는 알림을 모아 보세요!"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </LinearLayout>
        <Button
            android:id="@+id/notisetlikekeywordbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:textSize="22sp"
            android:text="다 음"/>
    </LinearLayout>
</LinearLayout>
