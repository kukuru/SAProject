<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/bg1">

    <LinearLayout
        android:id="@+id/title_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/menu_drawer_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@null"
            android:src="@drawable/ac_home_menu"
            android:onClick="OnMenuButtonListener"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/top_bi" />

        <LinearLayout
            android:id="@+id/graph_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/bg2"
            android:gravity="center"
            android:layout_weight="1"
            android:onClick="OnGraphButtonListener">

            <ImageView
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_graph" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:onClick="OnFinishButtonListener"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textSize="21dp"
            android:textColor="@color/bg2"/>
    </LinearLayout>
</LinearLayout>